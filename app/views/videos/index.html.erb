<% if @videos.present? %>
<section id="tables">
  <div class="page-header">
    <h1>Videos</h1>
  </div>

  <table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
    </thead>
    <tbody>
    <% @videos.each do |video| %>
        <tr>
          <td><%=video.name%></td>
          <td><%=video.description%></td>
          <td><%=link_to "Watch",video.path.url%></td>
          <% if current_user.present?%>
              <td><%=link_to "Remove",video_path(video),:method => "delete"%></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
</section>
<% else %>
<div class="hero-unit">
      <h1>No Video uploaded for this category</h1>
</div>
<% end %>